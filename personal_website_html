  <button id="play-music" onclick="toggleMusic()">Play Background Music</button>
  <script>
    function toggleMusic() {
      const audio = document.getElementById("background-music");
      const button = document.getElementById("play-music");
      if (audio.paused) {
        audio.play();
        button.textContent = "Pause Background Music";
      } else {
        audio.pause();
        button.textContent = "Play Background Music";
      }
    }
  </script>
